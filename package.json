{
  "name": "relocation",
  "version": "0.5.0",
  "description": "Relocation works with React Redux to manage modals, lightboxes, alerts, and overlays.",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm run clean && npm run build ",
    "clean": "./node_modules/.bin/rimraf lib ./*.js ./*.map",
    "build": "./node_modules/.bin/babel --copy-files -s -d . src",
    "test": "npm run lint && npm run spec && npm run flow",
    "spec": "NODE_ENV=test ./node_modules/.bin/jest --coverage --runInBand=${JEST_SERIAL:-$CI}",
    "lint": "./node_modules/.bin/eslint .",
    "flow": "./node_modules/.bin/flow check"
  },
  "author": "Neal Granger <neal@metalab.co>",
  "repository": {
    "type": "git",
    "url": "git@github.com:metalabdesign/relocation.git"
  },
  "license": "CC0-1.0",
  "dependencies": {
    "cuid": "^1.3.8"
  },
  "peerDependencies": {
    "react": "^16.3.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.37",
    "@babel/core": "^7.0.0-beta.37",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.37",
    "@babel/preset-flow": "^7.0.0-beta.37",
    "@babel/preset-react": "^7.0.0-beta.37",
    "@babel/register": "^7.0.0-beta.37",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.3",
    "eslint": "^4.6.0",
    "eslint-config-metalab": "^9.0.1",
    "flow-bin": "^0.70.0",
    "jest": "^22.4.3",
    "prettier": "^1.12.0",
    "react": "^16.3.2",
    "react-test-renderer": "^16.3.2",
    "rimraf": "^2.6.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/*.spec.js"
    ],
    "coveragePathIgnorePatterns": [
      ".*.spec.js"
    ]
  }
}
